<div class="container d-flex justify-content-center align-items-center vh-100">
    <div style="width: 100%; max-width: 400px;">
        <h1 class="text-center mb-4">Регистрация</h1>
        <form>
            <!-- Полное имя -->
            <div class="mb-3">
                <label for="fullName" class="form-label">Имя</label>
                <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter your full name" required>
            </div>
            <!-- Логин -->
            <div class="mb-3">
                <label for="username" class="form-label">Логин</label>
                <input type="text" class="form-control" id="username" name="login" placeholder="Enter your username" required>
            </div>
            <!-- Пароль -->
            <div class="mb-3">
                <label for="password" class="form-label">Пароль</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
            </div>
            <!-- Кнопка регистрации -->
            <button type="submit" id="registerButton" class="btn btn-primary w-100">Регистрация</button>
        </form>
    </div>
</div>

<script  src="@Url.Content("~/js/auth-api-service.js")" type="module" asp-append-version="true"></script>